{
  "manifest_version": 2,
  "name": "Take a Rest",
  "description": "You should take a couple minutes rest from the screen every 30 mins. Maybe also stand up and move your legs!",
  "version": "0.0.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    // "default_icon": "icon.png",
    "default_title": "Rest time",
    "default_popup": "popup.html"
  },
  //   "background": {
  //     "scripts": ["background.js"],
  //     "persistent": false
  //   },
  "permissions": ["activeTab", "storage", "https://ajax.googleapis.com/"]
}
